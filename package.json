{
  "name": "fly-workflow-orchestrator",
  "version": "0.1.0",
  "description": "Workflow orchestration system for Fly.io Ubuntu instances",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun build src/index.ts --target node --outdir dist",
    "start": "NODE_ENV=production bun run dist/index.js",
    "test": "bun test",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "format": "biome format --write src",
    "typecheck": "tsc --noEmit",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:seed": "bun run src/db/seed.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.4",
    "@hono/zod-validator": "^0.7.0",
    "dotenv": "^16.5.0",
    "hono": "^4.7.11",
    "inngest": "^3.39.1",
    "nanoid": "^5.1.5",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "ssh2": "^1.16.0",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.2.16",
    "@types/node": "^24.0.1",
    "@types/ssh2": "^1.15.5",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  }
}
