{
  "name": "lightfast-computer",
  "version": "0.2.0",
  "description": "Simplified Fly.io instance management with GitHub integration and command execution",
  "type": "module",
  "main": "dist/sdk.js",
  "types": "dist/sdk.d.ts",
  "exports": {
    ".": {
      "import": "./dist/sdk.js",
      "types": "./dist/sdk.d.ts"
    },
    "./server": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "dotenv -- bun run --hot src/index.ts",
    "with-env": "dotenv -e ./.env --",
    "build": "bun build src/sdk.ts src/index.ts --target node --outdir dist",
    "start": "NODE_ENV=production bun run dist/index.js",
    "test": "bun test",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "format": "biome format --write src",
    "typecheck": "tsc --noEmit",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:seed": "bun run src/db/seed.ts"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.0-alpha.15",
    "@hono/node-server": "^1.14.4",
    "@hono/zod-validator": "^0.7.0",
    "@t3-oss/env-core": "^0.13.8",
    "ai": "^5.0.0-alpha.15",
    "dotenv": "^16.5.0",
    "hono": "^4.8.2",
    "nanoid": "^5.1.5",
    "neverthrow": "^8.2.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.4",
    "@types/bun": "^1.2.17",
    "@types/node": "^24.0.3",
    "dotenv-cli": "^8.0.0",
    "typescript": "^5.8.3"
  }
}
