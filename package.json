{
  "name": "@lightfast/computer",
  "version": "0.1.0",
  "description": "A powerful SDK for creating and managing Ubuntu instances on Fly.io with GitHub integration, command execution, and real-time streaming",
  "type": "module",
  "main": "./dist/sdk.js",
  "module": "./dist/sdk.js",
  "types": "./dist/sdk.d.ts",
  "exports": {
    ".": {
      "types": "./dist/sdk.d.ts",
      "import": "./dist/sdk.js",
      "require": "./dist/sdk.cjs"
    },
    "./server": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "SDK_USAGE.md"
  ],
  "scripts": {
    "dev": "dotenv -- bun run --hot src/index.ts",
    "with-env": "dotenv -e ./.env --",
    "build": "npm run build:clean && npm run build:js && npm run build:types && npm run build:cjs",
    "build:clean": "rm -rf dist",
    "build:js": "bun build src/sdk.ts src/index.ts --target node --outdir dist",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationDir dist",
    "build:cjs": "bun build src/sdk.ts --target node --format cjs --outfile dist/sdk.cjs && bun build src/index.ts --target node --format cjs --outfile dist/index.cjs",
    "start": "NODE_ENV=production bun run dist/index.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "biome check src tests",
    "lint:fix": "biome check --write src tests",
    "format": "biome format --write src tests",
    "format:check": "biome format src tests",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test && npm run lint",
    "release": "npm version patch && npm publish --access public",
    "release:minor": "npm version minor && npm publish --access public",
    "release:major": "npm version major && npm publish --access public"
  },
  "keywords": [
    "fly.io",
    "ubuntu",
    "instances",
    "compute",
    "sandbox",
    "github",
    "command-execution",
    "sdk",
    "developer-tools",
    "cloud",
    "infrastructure",
    "typescript"
  ],
  "author": {
    "name": "Lightfast Team",
    "email": "team@lightfast.ai",
    "url": "https://lightfast.ai"
  },
  "license": "MIT",
  "homepage": "https://github.com/lightfastai/computer#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lightfastai/computer.git"
  },
  "bugs": {
    "url": "https://github.com/lightfastai/computer/issues",
    "email": "support@lightfast.ai"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.4",
    "@hono/zod-validator": "^0.7.0",
    "@t3-oss/env-core": "^0.13.8",
    "hono": "^4.8.2",
    "nanoid": "^5.1.5",
    "neverthrow": "^8.2.0",
    "pino": "^9.7.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.4",
    "@types/bun": "^1.2.17",
    "@types/node": "^24.0.3",
    "dotenv": "^16.5.0",
    "dotenv-cli": "^8.0.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  }
}